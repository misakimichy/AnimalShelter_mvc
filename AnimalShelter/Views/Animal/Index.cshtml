@{
  Layout = "_Layout";
}
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<div class="card">
    <h1>Animals</h1>
    <div class="card-header">
    <p>Sort By: @Html.ActionLink("Name", "Index") | @Html.ActionLink("Date", "IndexByDate") |@Html.ActionLink("Breed", "IndexByBreed") | @Html.ActionLink("Gender", "IndexByGender") |@Html.ActionLink("Species", "IndexBySpecies")</p>
    </div>
        @if (@Model.Count == 0)
        {
        <h3>No animals have been added yet!</h3>
        } 

        @foreach (Animal animal in Model)
        {
        <p>@Html.ActionLink($"{animal.Name} - {animal.Species}", "Details", new { id = animal.AnimalId})</p>
        }

        <div class="card-footer">
        <p>@Html.ActionLink("Add new animal", "Create")</p>
        <p>@Html.ActionLink("Back Home", "Index", "Home")</p>
    </div>
</div>